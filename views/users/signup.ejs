<% layout('layouts/boilerplate') %>

<div class="container" style="margin-top: 120px;">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4 border-0 rounded-4">
        <h3 class="text-center mb-4 fw-bold text-danger">Create Your Account</h3>

        <% if (locals.error && error.length > 0) { %>
          <div class="alert alert-danger text-center"><%= error %></div>
        <% } %>

        <form action="/signup" method="POST" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" id="name" name="name" class="form-control" required>
          </div>

          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control" required>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" required>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" required>
          </div>

          <button type="submit" class="btn btn-danger w-100 mb-3">Sign Up</button>
        </form>

        <div class="text-center text-muted mb-2">or</div>

        <a href="/auth/google" class="btn btn-light border w-100 shadow-sm d-flex align-items-center justify-content-center gap-2">
          <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" style="width: 20px;">
          <span>Continue with Google</span>
        </a>

        <p class="text-center mt-3">
          Already have an account? <a href="/login" class="text-danger fw-semibold">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>
