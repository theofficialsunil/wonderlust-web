<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 500px; border-radius: 16px;">
        <div class="card-body text-center p-4">
 
            <img src="<%= currentUser.profilePhoto %>" 
                 alt="Profile Photo" 
                 class="rounded-circle mb-3" 
                 width="150" height="150">

            <h3 class="fw-bold mb-0"><%= currentUser.name %></h3>
            <p class="text-muted mb-1">@<%= currentUser.username %></p>
 
            <p class="text-secondary mb-3"><%= currentUser.email %></p>

            <hr>

            <a href="/users/<%= currentUser._id %>/edit" class="btn btn-primary w-100 mb-2">
                <i class="bi bi-pencil-square"></i> Edit Profile
            </a>
            <a href="/logout" class="btn btn-outline-danger w-100">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>
</div>